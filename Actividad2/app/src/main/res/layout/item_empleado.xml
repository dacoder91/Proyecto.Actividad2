<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: 1"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNombreCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Completo"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtDni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNI: 12345678A"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtFechaNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Nacimiento: 01-01-1990"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección: Calle Falsa 123"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtPuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puesto: Desarrollador"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtDescripcionPuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción: Desarrollo de aplicaciones"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horario: 09:00 - 18:00"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtDiasLaborales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Días Laborales: 5"
        android:textSize="14sp" />

</LinearLayout>